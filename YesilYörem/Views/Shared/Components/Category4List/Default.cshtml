@model IEnumerable<EntityLayer.Concrete.Category>

<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Kategoriler</h1>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-lg-3 p-5 mt-3">
                <a href="#"><img src="~/zay/assets/img/category_img_01.jpg" class="rounded-circle img-fluid border"></a>
                <h5 class="text-center mt-3 mb-3">@item.CategoryName</h5>
                <p class="text-center"><a href="#" class="btn btn-success">Go Shop</a></p>
            </div>
        }
    </div>
</section>

