@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-4">
    <div class="col col-md-2">
    </div>
    <div class="col col-md-10">
        <div class="card z-index-7">
            <div class="card-header pb-0">
                <h6>Ürün Listesi</h6>
            </div>
            <div class="card-body p-6">
                <div class="chart">

                    <div class="table table-bordered table-hover">
                        <table style="width: 925px; height:300px;">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Ürün resmi</th>
                                    <th>Ürün İsmi</th>
                                    <th>Ürün Kategorisi</th>
                                    <th>Ürün Adeti</th>
                                    <th>Ürün Fiyatı</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@item.ProductId</td>
                                        <td> <img src="@item.ImageUrl" class="img-thumbnail" style="width: 90px; height:70px;"></td>
                                        <td>@item.ProductName</td>
                                        <td>@item.categories.CategoryName</td>
                                        <td>@item.ProductStok</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <a href="/Yönetim/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>

                                        </td>
                                        <td>
                                            <a href="/Yönetim/Product/UpdateProduct/@item.ProductId" class="btn btn-primary">Düzenle</a>
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                        <br />
                        <a href="/Yönetim/Product/AddProduct/" class="btn btn-success">Ürün Ekle</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>